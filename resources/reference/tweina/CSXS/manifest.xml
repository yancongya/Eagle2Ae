<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest Version="5.0" ExtensionBundleId="com.aescripts.tweina" ExtensionBundleVersion="1.1.0"
		ExtensionBundleName="TweiNa" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<ExtensionList>
		<Extension Id="com.aescripts.tweina.panel" Version="1.1.0" />
		<Extension Id="com.aescripts.tweina.preferences" Version="1.1.0" />
		<Extension Id="com.aescripts.tweina.about" Version="1.1.0" />
	</ExtensionList>

	<ExecutionEnvironment>

		<HostList>
        <!-- Photoshop -->
        <Host Name="PHXS" Version="[16.0,99.9]" />
        <Host Name="PHSP" Version="[16.0,99.9]" />
        
        <!-- Illustrator -->
        <Host Name="ILST" Version="[18.0,99.9]" />
        <!-- After Effects -->
        <Host Name="AEFT" Version="[16.0,99.9]" />
		</HostList>

		<LocaleList>
			<Locale Code="All" />
		</LocaleList>

		<RequiredRuntimeList>
			<RequiredRuntime Name="CSXS" Version="5.0" />
		</RequiredRuntimeList>

	</ExecutionEnvironment>

	<DispatchInfoList>

		<Extension Id="com.aescripts.tweina.panel">
			<DispatchInfo >
				<Resources>
					<MainPath>./panel/panel.html</MainPath>
					<ScriptPath>./panel/jsx/main.jsx</ScriptPath>
					<CEFCommandLine>
					  <Parameter>--enable-nodejs</Parameter>
					  <Parameter>--allow-file-access-from-files</Parameter>
					  <Parameter>--allow-file-access</Parameter>
					</CEFCommandLine>
				</Resources>
				<Lifecycle>
					<AutoVisible>true</AutoVisible>
				</Lifecycle>
				<UI>
					<Type>Panel</Type>
					<Menu>TweiNa</Menu>
					<Geometry>
						<Size>
							<Height>200</Height>
							<Width>200</Width>
						</Size>
            <MaxSize>
							<Height>300</Height>
							<Width>300</Width>
						</MaxSize>
						<MinSize>
							<Height>10</Height>
							<Width>10</Width>
						</MinSize>
					</Geometry>
          <Icons>
            <Icon Type="Normal">./icons/iconLight.png</Icon>

            <Icon Type="RollOver">./icons/iconLight.png</Icon>

            <Icon Type="DarkNormal">./icons/iconDark.png</Icon>

            <Icon Type="DarkRollOver">./icons/iconDark.png</Icon>
          </Icons>
				</UI>
       
			</DispatchInfo>
		</Extension>

		<Extension Id="com.aescripts.tweina.preferences">
			<DispatchInfo >
				<Resources>
					<MainPath>./preferences/preferences.html</MainPath>
					<CEFCommandLine>
					  <Parameter>--enable-nodejs</Parameter>
						<Parameter>--allow-file-access-from-files</Parameter>
					  <Parameter>--allow-file-access</Parameter>
					</CEFCommandLine>
				</Resources>
				<Lifecycle>
					<AutoVisible>true</AutoVisible>
				</Lifecycle>
				<UI>
					<!-- Options panel is ALWAYS a dialog -->
					<Type>ModalDialog</Type>
					<Geometry>
						<Size>
							<Height>300</Height>
							<Width>300</Width>
						</Size>
						<!-- <MaxSize>
							<Height>500</Height>
							<Width>350</Width>
						</MaxSize>
						<MinSize>
							<Height>100</Height>
							<Width>350</Width>
						</MinSize> -->
					</Geometry>
				</UI>
			</DispatchInfo>
		</Extension>

		<!-- DO NOT CHANGE BELOW THIS LINE -->
		<Extension Id="com.aescripts.tweina.about">
			<DispatchInfo >
				<Resources>
					<MainPath>./dialog/dialog.html</MainPath>
					<CEFCommandLine>
					  <Parameter>--enable-nodejs</Parameter>
						<Parameter>--allow-file-access-from-files</Parameter>
					  <Parameter>--allow-file-access</Parameter>
					</CEFCommandLine>
				</Resources>
				<Lifecycle>
					<AutoVisible>true</AutoVisible>
				</Lifecycle>
				<UI>
					<Type>Modeless</Type>
					<Geometry>
						<Size>
							<Height>440</Height>
							<Width>350</Width>
						</Size>
						<MaxSize>
							<Height>500</Height>
							<Width>350</Width>
						</MaxSize>
						<MinSize>
							<Height>100</Height>
							<Width>350</Width>
						</MinSize>
					</Geometry>
				</UI>
			</DispatchInfo>
		</Extension>
	</DispatchInfoList>
</ExtensionManifest>
