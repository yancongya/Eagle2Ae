    </Extension>

    <Extension Id="com.kraftyfx.kbar.toolbar-4">
      <DispatchInfo>
        <Resources>
          <MainPath>./toolbar.html</MainPath>
          <CEFCommandLine>
            <Parameter>--enable-nodejs</Parameter>
            <Parameter>--mixed-content</Parameter>
            <Parameter>--allow-file-access</Parameter>
            <Parameter>--allow-file-access-from-files</Parameter>
          </CEFCommandLine>
          <ScriptPath>./all.jsxbin</ScriptPath>
        </Resources>
        <Lifecycle>
          <AutoVisible>true</AutoVisible>
        </Lifecycle>
        <UI>
          <Type>Panel</Type>
          <Menu>%global-title4</Menu>
          <Geometry>
            <Size>
              <Height>50</Height>
              <Width>300</Width>
            </Size>
          </Geometry>
        </UI>
      </DispatchInfo>
    </Extension>

    <Extension Id="com.kraftyfx.kbar.config">
      <DispatchInfo>
        <Resources>
          <MainPath>./config.html</MainPath>
          <CEFCommandLine>
            <Parameter>--enable-nodejs</Parameter>
            <Parameter>--allow-file-access</Parameter>
            <Parameter>--allow-file-access-from-files</Parameter>
          </CEFCommandLine>
          <ScriptPath>./all.jsxbin</ScriptPath>
        </Resources>
        <Lifecycle>
          <AutoVisible>true</AutoVisible>
        </Lifecycle>
        <UI>
          <Type>Custom</Type>
          <Geometry>
            <Size>
              <Height>600</Height>
              <Width>600</Width>
            </Size>
            <MaxSize>
              <Height>2400</Height>
              <Width>2400</Width>
            </MaxSize>
           <MinSize>
              <Height>600</Height>
              <Width>600</Width>
            </MinSize>
          </Geometry>
        </UI>
      </DispatchInfo>
    </Extension>

    <Extension Id="com.aescripts.kbar3.about">
      <DispatchInfo>
        <Resources>
          <MainPath>./dialog/dialog.html</MainPath>
          <CEFCommandLine>
            <Parameter>--enable-nodejs</Parameter>
            <Parameter>--allow-file-access-from-files</Parameter>
            <Parameter>--allow-file-access</Parameter>
          </CEFCommandLine>
        </Resources>
        <Lifecycle>
          <AutoVisible>true</AutoVisible>
        </Lifecycle>
        <UI>
          <Type>Modeless</Type>
          <Geometry>
          <Size>
            <Height>440</Height>
            <Width>350</Width>
          </Size>
          <MaxSize>
            <Height>500</Height>
            <Width>350</Width>
          </MaxSize>
          <MinSize>
            <Height>100</Height>
            <Width>350</Width>
          </MinSize>
          </Geometry>
        </UI>
      </DispatchInfo>
    </Extension>
